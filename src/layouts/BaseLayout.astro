  <body class="bg-white text-gray-900 antialiased">
    <!-- OVERLAY (oscurece el fondo al abrir el menÃº) -->
    <div id="menu-overlay"
    class="fixed inset-0 bg-black/40 backdrop-blur-sm opacity-0 pointer-events-none transition-opacity duration-300 z-40 md:hidden">
    </div>
    <header class="fixed top-0 left-0 w-full bg-white/90 backdrop-blur-md border-b border-gray-200 z-50">
        <nav class="max-w-6xl mx-auto px-4 py-3 flex items-center justify-between">

            <!-- LOGO -->
            <a href="/" class="flex items-center">
              <img src="../src/assets/logo.png" class="w-16 h-auto scale-160" alt="Horizonte Limpio">
            </a>
            <!-- BOTÃ“N HAMBURGUESA (solo mÃ³vil) -->
            <button id="menu-toggle" class="md:hidden p-2 rounded focus:outline-none">
            <svg id="icon-hamburger" class="w-7 h-7" fill="none" stroke="currentColor" stroke-width="2"
                viewBox="0 0 24 24" stroke-linecap="round" stroke-linejoin="round">
                <path d="M4 6h16M4 12h16M4 18h16" />
            </svg>

            <svg id="icon-close" class="w-7 h-7 hidden" fill="none" stroke="currentColor" stroke-width="2"
                viewBox="0 0 24 24" stroke-linecap="round" stroke-linejoin="round">
                <path d="M6 18L18 6M6 6l12 12" />
            </svg>
            </button>

            <!-- MENU -->
            <ul id="menu"
            class="absolute md:static top-full left-0 w-full md:w-auto bg-white md:bg-transparent shadow-md md:shadow-none
                    md:flex gap-10 text-base md:text-sm font-medium px-6 py-6 md:p-0
                    flex flex-col md:flex-row items-center justify-center
                    hidden opacity-0 -translate-y-2 md:opacity-100 md:translate-y-0
                    transition-all duration-300 ease-out z-50">

                <li><a href="/" class="hover:text-blue-600 transition text-center">Inicio</a></li>
                <li><a href="/" class="hover:text-blue-600 transition text-center">Â¿QuiÃ©nes somos?</a></li>
                <li><a href="/test" class="hover:text-blue-600 transition text-center">Â¿Tu consumo es saludable?</a></li>
                <li><a href="/mapa" class="hover:text-blue-600 transition text-center">Pide ayuda</a></li>


            </ul>
        </nav>

  <script>
  const toggle = document.getElementById("menu-toggle");
  const menu = document.getElementById("menu");
  const overlay = document.getElementById("menu-overlay");
  const iconHam = document.getElementById("icon-hamburger");
  const iconClose = document.getElementById("icon-close");

  if (toggle && menu && overlay && iconHam && iconClose) {
    toggle.addEventListener("click", () => {
      const isHidden = menu.classList.contains("hidden");

      if (isHidden) {
        // ABRIR
        menu.classList.remove("hidden", "opacity-0", "-translate-y-2");
        overlay.classList.remove("opacity-0", "pointer-events-none");
        iconHam.classList.add("hidden");
        iconClose.classList.remove("hidden");
      } else {
        // CERRAR
        menu.classList.add("opacity-0", "-translate-y-2");
        setTimeout(() => menu.classList.add("hidden"), 200);
        overlay.classList.add("opacity-0", "pointer-events-none");
        iconClose.classList.add("hidden");
        iconHam.classList.remove("hidden");
      }
    });

    // Cerrar si se hace click fuera del menÃº
    overlay.addEventListener("click", () => {
      menu.classList.add("opacity-0", "-translate-y-2");
      setTimeout(() => menu.classList.add("hidden"), 200);
      overlay.classList.add("opacity-0", "pointer-events-none");
      iconClose.classList.add("hidden");
      iconHam.classList.remove("hidden");
    });

    // Cerrar al pulsar un enlace
    document.querySelectorAll('#menu a').forEach(link =>
      link.addEventListener("click", () => {
        menu.classList.add("opacity-0", "-translate-y-2");
        setTimeout(() => menu.classList.add("hidden"), 200);
        overlay.classList.add("opacity-0", "pointer-events-none");
        iconClose.classList.add("hidden");
        iconHam.classList.remove("hidden");
      })
    );
  }
</script>

